# Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
APP_ENV=production
DEBUG=false
APP_PORT=8765

# URL Configuration (for HTTPS behind proxy/load balancer)
# TRUST_PROXY: Set to true when behind a reverse proxy (Easypanel, Nginx, etc.)
# This allows CakePHP to detect HTTPS from X-Forwarded-Proto header
TRUST_PROXY=true

# FULL_BASE_URL: (Optional) Force a specific base URL for the application
# Example: FULL_BASE_URL=https://yourdomain.com
# If not set, will be auto-detected from HTTP headers
FULL_BASE_URL=

# Database (External - not in Docker)
DB_HOST=your-database-host
DB_PORT=3306
DB_DATABASE=mesadeayuda
DB_USERNAME=your-db-user
DB_PASSWORD=your-db-password

# Security
# Generate a secure random string for SECURITY_SALT
# Use: php -r "echo bin2hex(random_bytes(32));"
SECURITY_SALT=your-very-long-random-security-salt-here

# Worker Configuration
WORKER_ENABLED=true

# Note: Gmail, WhatsApp, and n8n configurations are stored in SystemSettings table
# Configure them via Admin > Settings interface after deployment
