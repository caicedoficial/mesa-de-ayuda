# ============================================
# Docker Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# Application Settings
# ============================================
APP_ENV=development
DEBUG=true

# ============================================
# Database - Mysql
# ============================================
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
DB_PASSWORD=

# ============================================
# CakePHP Security
# ============================================
# Generate with: openssl rand -base64 32
SECURITY_SALT=__SALT__

